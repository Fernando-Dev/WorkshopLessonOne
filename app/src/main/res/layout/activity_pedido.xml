<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".ui.main.PedidoActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text"
              android:padding="10dp"
              android:text="@string/lista_pedidos"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <ImageButton android:id="@+id/btn_listar_pedidos"
                 android:layout_above="@+id/pedidos"
                 android:src="@drawable/ic_autorenew"
                 android:layout_toEndOf="@+id/text"
                 android:layout_width="wrap_content"
                 android:layout_height="54dp"/>
    <ListView android:id="@+id/pedidos"
              android:padding="10dp"
              android:layout_below="@+id/text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text1"
              android:text="@string/limpar_pedidos"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_below="@+id/pedidos"
              android:layout_toEndOf="@+id/btn_limpar_pedidos"
              android:padding="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <ImageButton android:id="@+id/btn_limpar_pedidos"
                 android:layout_below="@+id/pedidos"
                 android:src="@drawable/ic_clear"
                 android:padding="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="51dp"/>


</RelativeLayout>